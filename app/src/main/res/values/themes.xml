<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FF0288D1</item>
        <item name="colorPrimaryDark">#FF01579B</item>
        <item name="colorAccent">#FF0288D1</item>
        <item name="android:editTextBackground">@drawable/edit_text_background</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:textColorPrimary">#FF212121</item>
        <item name="android:textColorSecondary">#FF757575</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
    </style>

    <style name="MatrixInput">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FF212121</item>
        <item name="android:textColorHint">#FF757575</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#FF0288D1</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/edit_text_background</item>
    </style>
    <style name="Theme.QueueingCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="alertDialogStyle">@style/CustomAlertDialog</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButton</item>
    </style>

    <style name="AlertButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
</resources>
